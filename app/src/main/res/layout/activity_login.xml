<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity"
    android:padding="16dp"
    android:background="@drawable/logo_login"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="#700F5A"
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        />
    <EditText
        android:id="@+id/edNhapten"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:hint="User name"
        android:padding="16dp"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:textColorHint="@color/white"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        />


    <EditText
        android:id="@+id/edNhapPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/custom_button"
        android:hint="Nhập mật khẩu hợp lệ"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:padding="16dp"
        android:layout_marginTop="28dp"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/baseline_lock_open_24"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget password?"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="#700F5A"
            />
    </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginTop="24dp"
               >
               <Button
                   android:id="@+id/btLogin"
                   android:layout_width="140dp"
                   android:layout_height="wrap_content"
                   android:background="@drawable/custom_button"
                   android:text="Login"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginRight="20dp"
                   />
               <Button
                   android:id="@+id/btSign_up"
                   android:layout_width="140dp"
                   android:layout_height="wrap_content"
                   android:background="@drawable/custom_button4"
                   android:text="Sign up"
                   android:textColor="#F71D6B"
                   android:textSize="18sp"
                   android:textStyle="bold" />

           </LinearLayout>

</LinearLayout>