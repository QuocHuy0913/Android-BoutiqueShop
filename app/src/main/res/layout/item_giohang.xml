<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:padding="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:src="@drawable/backgroundne"
            android:layout_width="140dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/item_giohang_tensp"
                    android:text="Dry Pique Patterned Polo Shirt"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    />
                <ImageView
                    android:layout_gravity="right"
                    android:id="@+id/delete_giohang"
                    android:layout_width="22dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_clear_24"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã sản phẩm: "
                    android:textSize="18sp"
                    android:textColor="#999999"
                    />
                <TextView
                    android:id="@+id/item_giohang_masp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="458078"
                    android:textSize="18sp"
                    android:textColor="#999999"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_giohang_gia"
                    android:text="1.500.000 đ"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/baseline_remove_24"
                        android:id="@+id/item_giohang_tru"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:id="@+id/item_giohang_soluong"
                        android:text="1"
                        android:textColor="#999999"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <ImageView
                        android:src="@drawable/baseline_add_ne_24"
                        android:id="@+id/item_giohang_cong"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="TỔNG: "
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:id="@+id/item_giohang_giasp2"
                        android:text="5.000.000 đ"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>