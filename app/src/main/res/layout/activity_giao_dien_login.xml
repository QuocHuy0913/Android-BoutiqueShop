<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.GiaoDienLoginActivity"
    android:gravity="center"
    android:background="@drawable/logo_login"
    >

    <ImageView
        android:id="@+id/imgGiaoDien"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logohaha"
        />


    <Button
        android:id="@+id/btnLoginGiaoDien"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:onClick="Login"
        android:text="Login"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCreateLogin"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button4"
        android:text="SIGN UP"
        android:onClick="Register"
        android:textColor="#F71D6B"
        android:textStyle="bold"
        android:textSize="18sp"
        />

</LinearLayout>